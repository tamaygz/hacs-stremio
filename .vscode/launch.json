{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Home Assistant",
            "type": "debugpy",
            "request": "launch",
            "module": "homeassistant",
            "args": ["-c", "${workspaceFolder}/config", "--debug"],
            "justMyCode": false,
            "console": "integratedTerminal",
            "env": {
                "PYTHONDONTWRITEBYTECODE": "1"
            }
        },
        {
            "name": "Home Assistant (Verbose)",
            "type": "debugpy",
            "request": "launch",
            "module": "homeassistant",
            "args": ["-c", "${workspaceFolder}/config", "--debug", "--verbose"],
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Pytest: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}", "-v", "-s"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Pytest: All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/", "-v"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Pytest: All Tests with Coverage",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "--cov=custom_components/stremio",
                "--cov-report=html",
                "--cov-report=term"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Pytest: Config Flow Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/test_config_flow.py", "-v", "-s"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Pytest: Sensor Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/test_sensor.py", "-v", "-s"],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
