# Environment Variables for Stremio HACS Integration Development
# Copy this file to .env and fill in your values

# ============================================
# Stremio Credentials (for integration testing)
# ============================================
STREMIO_EMAIL=
STREMIO_PASSWORD=

# ============================================
# Home Assistant Configuration
# ============================================
# Custom Home Assistant config path (default: ./config)
HA_CONFIG_PATH=./config

# Home Assistant port (default: 8123)
HA_PORT=8123

# ============================================
# Development Settings
# ============================================
# Enable debug mode
DEBUG=true

# Python path (leave empty to use venv)
PYTHON_PATH=

# ============================================
# CI/CD Settings
# ============================================
# GitHub token for API access (optional, for install_hacs.sh rate limits)
GITHUB_TOKEN=
